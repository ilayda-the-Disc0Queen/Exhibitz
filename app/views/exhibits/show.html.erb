<% content_for :meta_title, "Find more info about #{@exhibit.name} on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @exhibit.artists.first.info %>
<%# content_for :meta_image, cl_image_path(@exhibit.image) %>
<h1><%= @exhibit.name %></h1>

<div class="exhibits">

  <div class="exhibit-show-card">
    <div class="exhibit-info">
      <div class="exhibit-info-left">
        <p><%= link_to @exhibit.museum.name, @exhibit.museum %></p>
        <p> </p>
      </div>

      <div class="exhibit-info-right">
        <% if @exhibit.price = 0 %>
          <p>Free!</p>
        <% else %>
          <p>Â£<%= @exhibit.price %></p>
        <% end %>
        <p><%= @exhibit.start_date %> - <%= @exhibit.close_date %></p>
      </div>
    </div>
  </div>

  <!-- Button trigger modal -->
  <!-- <button type="button" class="btn btn-primary booking-button" data-toggle="modal" data-target="#exampleModal">
    Book!
  </button> -->
  <%# <a class="btn btn-primary booking-button"  type="button" data-toggle="modal" data-target="#exampleModal"  role="button">Book!</a> %>


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Book for <strong> <%= @exhibit.name %> </strong> </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <%= simple_form_for [ @exhibit, @booking ], remote: true do |f| %>
              <h5>Start: <strong> <%=  @exhibit.start_date %> </strong> </h5>
              <h5>Close: <strong> <%=  @exhibit.close_date %> </strong> </h5>
              <%= f.input :date, as: :date, html5: true %>
              <%= f.submit "Book!", :class => "btn btn-primary" %>
              <div id="message"></div>
            <% end %>
        </div>
         <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%# <button type="button" class="btn btn-primary">Add to My Bookings</button> %>
        </div>
      </div>
    </div>
  </div>

  <div id="image-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://res.cloudinary.com/dofvu2msx/image/upload/v1590749981/toa-heftiba-mmdqGRs-yeo-unsplash_whk8ts.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://res.cloudinary.com/dofvu2msx/image/upload/v1590749980/adrien-olichon-pOU6Zi6dJ6E-unsplash_a4eqyh.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://res.cloudinary.com/dofvu2msx/image/upload/v1590749980/jessica-pamp-JNTSoyb_bbw-unsplash_ljl0mn.jpg" alt="Third slide">
      </div>
      </div>
     <a class="carousel-control-prev" href="#image-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#image-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <button type="button" class="btn btn-primary booking-button" data-toggle="modal" data-target="#exampleModal">
    Book!
  </button>

  <div class="about-the-artist">
    <div class="about-the-artist-info">
      <h2>About the artist</h2>
      <h3><%= link_to @exhibit.artists.first.name, artist_path(@exhibit.artists.first) %></h3>
      <p><%= @exhibit.artists.first.info %></p>
    </div>

    <div class="about-the-artist-image">
      <%= image_tag(Artist.last.image) %>
    </div>
  </div>

</div>

