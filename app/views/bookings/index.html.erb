

<div class="my-bookings-banner"><h1>My bookings</h1></div>

<div class="container bookings">
  <div class="my-bookings-list">
      <% @bookings.each do |booking| %>
        <% if booking.user==current_user %>
          <div class="my-bookings-card">
            <%= image_tag booking.exhibit.image, class: "my-bookings-image" %>
            <div class="my-bookings-details">
              <p class="details-name"><strong><%= booking.exhibit.name %></strong></p>
              <p style="font-size: 20px"><%= booking.date %></p>
              <p class="details-location"><strong style="font-size: 20px">@</strong> <%= booking.exhibit.museum.name %></p>
              <p style="font-size: 20px">Â£<%= booking.exhibit.price %></p>
            </div>    
          </div>
        <% end %>
      <% end %>
  </div>

</div>

