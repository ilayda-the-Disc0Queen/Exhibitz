<h1><%= @exhibit.name %></h1>

<div class="exhibits">

  <div class="exhibit-show-card">
    <div class="exhibit-info">
      <div class="exhibit-info-left">
        <p><%= link_to @exhibit.museum.name, @exhibit.museum.website %></p>
        <p>Placeholder</p>
      </div>

      <div class="exhibit-info-right">
        <% if @exhibit.price = 0 %>
          <p>Free!</p>
        <% else %>
          <p>Â£<%= @exhibit.price %></p>
        <% end %>
        <p><%= @exhibit.start_date %> - <%= @exhibit.close_date %></p>
      </div>
    </div>
  </div>

  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary booking-button" data-toggle="modal" data-target="#exampleModal">
    Book!
  </button>
  <%# <a class="btn btn-primary booking-button"  type="button" data-toggle="modal" data-target="#exampleModal"  role="button">Book!</a> %>


  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Book for <strong> <%= @exhibit.name %> </strong> </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <%= simple_form_for [ @exhibit, @booking ], remote: true do |f| %>
              <h5>Start: <strong> <%=  @exhibit.start_date %> </strong> </h5>
              <h5>Close: <strong> <%=  @exhibit.close_date %> </strong> </h5>
              <%= f.input :date, as: :date, html5: true %>
              <%= f.submit "Book!", :class => "btn btn-primary" %>
              <div id="message"></div>
            <% end %>
        </div>
         <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%# <button type="button" class="btn btn-primary">Add to My Bookings</button> %>
        </div> 
      </div>
    </div>
  </div>
  
  <div id="image-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="https://i.kym-cdn.com/photos/images/newsfeed/001/331/480/20a.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://pbs.twimg.com/profile_images/949787136030539782/LnRrYf6e.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="https://i.imgur.com/5mXfwr1.jpg" alt="Third slide">
      </div>
      </div>
     <a class="carousel-control-prev" href="#image-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#image-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="about-the-artist">
    <h2>About the artist</h2>
    <h3><%= link_to @exhibit.artists.first.name, artist_path(@exhibit.artists.first) %></h3>
    <p><%= @exhibit.artists.first.info %></p>
  </div>

</div>

