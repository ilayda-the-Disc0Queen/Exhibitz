<div class="container my-4">
  <div class="info-card">
    <img src= <%= @artist.image %> />
    <div class="info-card-infos">
      <h2><%= @artist.name %></h2>
      <h3>Category: <%= @artist.category %></h3>
      <p><%= @artist.info %></p>
      <p>Featured in "<%= @artist.exhibits.first.name %>" at the <%= @artist.exhibits.first.museum.name %>
        from <%= @artist.exhibits.first.start_date %> to <%= @artist.exhibits.first.close_date %>.</p>
        <div class="d-flex justify-content-center">
          <button type="button" class="btn btn-outline-dark mr-1">
            <%= link_to "View exhibit", exhibit_path(@artist.exhibits.first) %>
        </button>
        <button type="button" class="btn btn-outline-dark">
            <%= link_to "All exhibits", exhibits_path %>
        </button>
        </div>
    </div>
  </div>
</div>
