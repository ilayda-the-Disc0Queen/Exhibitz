<div class="indexbanner"><h1>Find your next exhibition</h1></div>

<div class="exhibits">

  <% @exhibits.each do |exhibit| %>

    <div class="exhibit-card">
      <div class="exhibit-image">
        <%= link_to image_tag("https://images.unsplash.com/photo-1523554888454-84137e72c3ce?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80"), exhibit_path(exhibit) %>
      </div>

      <div class="exhibit-info">

        <h5><%= exhibit.name %></h5>

        <hr width="50%" size="10" color="black">

        <div class="exhibit-info-left">
          <p><%= exhibit.museum.name %></p>
          <p>Placeholder</p>
        </div>

        <div class="exhibit-info-right">
          <p>Â£<%= exhibit.price %></p>
          <p><%= exhibit.start_date %> - <%= exhibit.close_date %></p>
        </div>

      </div>

    </div>

  <% end %>

</div>
