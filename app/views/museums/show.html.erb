
<div class="museum-image">
  <%= link_to image_tag(@museum.image), @museum.website %>
</div>


<div class="container">
    <div class="museum-info">
      <h2><%= @museum.name %></h2>
      <div class="address-website">
        <p><%= @museum.address %></p>
        <p><%= @museum.website %></p>
      </div>
    </div>

    <div class="museum-details">
      <p><%= @museum.info  %></p>
    </div>

    <h4>Current exhibitions:</h4>

    <div class="exhibits-title"></div>
    <div class="exhibits">
      <% @museum.exhibits.each do  |exhibit| %>
        <div class="exhibit-card">
          <div class="exhibit-image">
            <%= link_to image_tag(exhibit.image), exhibit_path(exhibit) %>
          </div>

          <div class="exhibit-info">
            <div class="exhibit-info-name">
              <h5><%= link_to exhibit.name, exhibit_path(exhibit) %></h5>
            </div>

            <hr width="50%" size="10" color="black">

            <div class="exhibit-info-left">
              <p class="m-1"><%= link_to exhibit.museum.name, exhibit.museum.website %></p>
              <p class="m-1">              </p>
            </div>

            <div class="exhibit-info-right">
              <% if exhibit.price == 0 %>
                <p class="m-1">Free!</p>
              <% else %>
                <p class="m-1">Â£<%= exhibit.price %></p>
              <% end %>
              <p><%= exhibit.start_date %> - <%= exhibit.close_date %></p>
            </div>

          </div>

        </div>
      <% end %>
    </div>
</div>
