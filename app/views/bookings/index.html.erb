

<div class="my-bookings-banner"><h1>My bookings</h1></div>

<div class="container bookings">
  <div class="my-bookings-list">
      <% @bookings.each do |booking| %>
        <% if booking.user==current_user %>
          <div class="my-bookings-card">
            <%= image_tag booking.exhibit.image, class: "my-bookings-image" %>
            <div class="my-bookings-details">
              <div><h2 class="details-name"><strong><%= booking.exhibit.name %></strong></h2></div>
              <div class="booking-info">
                <p><%= booking.date %></p>
                <p class="details-location"><strong>@</strong> <%= booking.exhibit.museum.name %></p>
                <p>Â£<%= booking.exhibit.price %></p>
              </div>   
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

